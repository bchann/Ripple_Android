<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_passcode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.brianchan.ripple_android.PasscodeActivity">

    <com.example.brianchan.ripple_android.RippleFont
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/colorAccent"
        android:textSize="60sp"
        android:gravity="center"
        android:id="@+id/logo"/>

    <Button
        android:text="Enter Party"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@drawable/button_text_color"
        android:background="@drawable/custom_button"
        android:id="@+id/enterButton"
        android:layout_above="@+id/inviteButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:onClick="enterParty"/>

    <Button
        android:text="Invite Friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:textColor="@drawable/button_text_color"
        android:background="@drawable/custom_button"
        android:id="@+id/inviteButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="sendSMS"/>

    <TextView
        android:text="Your Passcode is:"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/passcodeText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="1234"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:textSize="60sp"
        android:gravity="center"
        android:id="@+id/passcodeText"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/passcode_back"/>
</RelativeLayout>
